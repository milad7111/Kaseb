<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/top_of_list_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/top_of_list_margin_in_row"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/dialog_edit_profile_kaseb_dialog_edit_profile_kaseb_fragment_customer_insert_picture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/avatar_customer_insert"
                    android:onClick="pic_selector_on_profile_kaseb"
                    android:src="@drawable/add_image" />

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="30"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_first_name"
                        android:inputType="textPersonName"
                        android:maxLength="30" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="30"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_last_name"
                        android:inputType="textPersonName"
                        android:maxLength="30" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_phone_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_phone_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_mobile_number"
                        android:inputType="phone"
                        android:maxLength="15" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_birth_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_birth_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_birth_day"
                        android:inputType="date"
                        android:maxLength="10" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="40"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress"
                        android:maxLength="40" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_phone_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_phone_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_phone_work"
                        android:inputType="phone"
                        android:maxLength="15" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_phone_fax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_phone_fax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_phone_fax"
                        android:inputType="phone"
                        android:maxLength="15" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_phone_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_phone_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_phone_other"
                        android:inputType="phone"
                        android:maxLength="15" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_address_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_address_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_address_country"
                        android:inputType="text"
                        android:maxLength="20" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_address_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_address_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_address_city"
                        android:inputType="text"
                        android:maxLength="20" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_address_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_address_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_address_street"
                        android:inputType="text"
                        android:maxLength="50" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_address_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="15"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_address_postal_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_address_postal_code"
                        android:inputType="textPostalAddress"
                        android:maxLength="15" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/dialog_edit_profile_kaseb_text_input_layout_input_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:errorTextAppearance="@style/text_input_layout_style_not_error"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <EditText
                        android:id="@+id/dialog_edit_profile_kaseb_input_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_description"
                        android:inputType="text"
                        android:maxLength="50" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
