<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/design_snackbar_padding_vertical_2lines"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_dialog_add_tax_for_sale_tax_discount_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/dialog_add_tax_for_sale_tax_discount_amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_tax_amount"
                android:inputType="number|numberDecimal"
                android:maxLength="15" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_dialog_add_tax_for_sale_tax_discount_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/dialog_add_tax_for_sale_tax_discount_percent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:allowUndo="false"
                android:hint="@string/hint_tax_percent"
                android:inputType="number|numberDecimal" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/dialog_add_tax_input_tax_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

    </LinearLayout>

</LinearLayout>