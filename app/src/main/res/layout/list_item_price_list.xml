<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                android:id="@+id/price_list_buy_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/top_of_list_margin_in_row"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack" />

            <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                android:id="@+id/price_list_sale_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/top_of_list_margin_in_row"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/top_of_list_margin_in_row"
                android:orientation="vertical">

                <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                    android:id="@+id/price_list_date_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/buy_date"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />

                <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                    android:id="@+id/price_list_quantity_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_of_list_margin_in_row"
                    android:gravity="right"
                    android:text="@string/quantity"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                    android:id="@+id/price_list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />

                <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                    android:id="@+id/price_list_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_of_list_margin_in_row"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>