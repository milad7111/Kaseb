<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mjkarbasian.moshtarimadar.Debators">
<LinearLayout
    android:id="@+id/debator_section"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:padding="2dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    >
    <ImageView
        android:id="@+id/item_card_customer_avater"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:src="@drawable/kaseb_pic"
        />
    <TextView
        android:id="@+id/item_card_debator_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:text="@string/kaseb_name"
        android:layout_marginLeft="@dimen/item_horizontal_margin"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:maxLength="14"
        android:textAppearance="?android:textAppearanceMedium"
        />
    <TextView
        android:id="@+id/item_card_balance_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/item_horizontal_margin"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:layout_weight="3"
        android:text="@string/sample_text_purchase_of_customer_amount"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:textAppearanceLarge"
        />

</LinearLayout>
<TableLayout
    android:id="@+id/table_balance_debators"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/activity_vertical_Large_margin"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:divider="@drawable/divider_list"
    android:showDividers="middle"
    >
    <TableRow
        android:padding="3dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/column_title_invoice_code"
            android:text="@string/column_title_Bill_code"
            style="@style/debator_table_header_text"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/column_title_settlement"
            android:text="@string/column_title_day_of_maturity"
            style="@style/debator_table_header_text"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/column_title_account_ballance"
            android:text="@string/column_title_account_balance"
            style="@style/debator_table_header_text"
            android:layout_weight="2"/>
