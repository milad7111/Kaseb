<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_of_list_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_of_list_margin_in_row"
            android:gravity="center"
            android:orientation="horizontal">

            <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                android:id="@+id/payment_list_for_sale_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/top_of_list_margin_in_row"

                android:layout_weight="7"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:hint="@string/sample_text_purchase_of_customer_amount"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/text_size_in_list" />

            <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                android:id="@+id/payment_list_for_sale_due_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/top_of_list_margin_in_row"
                android:layout_weight="5"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:hint="@string/hint_due_date"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/text_size_in_list" />

            <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                android:id="@+id/payment_list_for_sale_payment_method"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/top_of_list_margin_in_row"
                android:layout_weight="5"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/text_size_in_list" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/payment_list_for_sale_is_passed_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_of_list_margin_in_row"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/dialog_add_payment_is_pass"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/text_size_in_list_item"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>