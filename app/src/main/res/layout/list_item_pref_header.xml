<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/top_of_list_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pref_header_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/coin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:gravity="start|center_vertical"
            android:orientation="vertical">

            <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                android:id="@+id/pref_header_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/pref_header_cost"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack" />

            <mjkarbasian.moshtarimadar.Helpers.AutoResizeTextView
                android:id="@+id/pref_header_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_of_list_margin_in_row"
                android:text="@string/pref_header_cost"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>