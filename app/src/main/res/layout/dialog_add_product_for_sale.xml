<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_number_of_product_for_sale_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/top_of_list_margin"
        android:layout_marginLeft="@dimen/design_snackbar_padding_vertical_2lines"
        android:layout_marginRight="@dimen/design_snackbar_padding_vertical_2lines"
        android:layout_marginTop="@dimen/design_snackbar_padding_vertical_2lines"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/add_number_of_product_for_sale_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorAccent"
            android:visibility="gone" />

    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_list"
        android:elevation="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/design_snackbar_padding_vertical_2lines"
            android:divider="@drawable/divider_list"
            android:orientation="vertical">

            <ListView
                android:id="@+id/list_view_product_for_sale_number"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:divider="@null" />

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_list"
        android:elevation="5dp" />

</LinearLayout>